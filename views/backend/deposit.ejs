<div class="settings mtb15">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 col-lg-3">
        <%- include("./partials/sidenav") %>
      </div>
      <div class="col-md-12 col-lg-9">
        <div class="tab-content" id="v-pills-tabContent">

          <div class="tab-pane fade active show" id="withdraw" role="tabpanel" aria-labelledby="wallet-tab">
            <div class="wallet">
              <div class="row">
                <div class="col-md-12 col-lg-8 mr-2">
                  <div class="tab-content">
                    <div class="tab-pane fade show active" id="coinBTC" role="tabpanel">
                      <% if (error_msg !="" ) { %>
                      <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                          <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>
                          <strong>Error: </strong>
                          <%=error_msg%>
                        </div>
                      </div>
                      <% } %>
                      <% if (success_msg !="" ) { %>
                      <div class="alert alert-success d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                          <use xlink:href="#check-circle-fill" />
                        </svg>
                        <div>
                          <strong>Success: </strong>
                          <%= success_msg %>
                        </div>
                      </div>
                      <% } %>
                      <!-- <div class="vh-100 d-flex justify-content-center"> -->

                      <div class="form-access mx-auto">
                        <form action="/dashboard/deposit" method="post">
                          <span>Deposit to your wallet</span>
                          <div class="form-group">
                            <input type="text" name="address" class="form-control" placeholder="Asset address from">
                          </div>
                          <div class="form-group">
                            <input type="text" name="amount" class="form-control" placeholder="Deposit amount">
                          </div>
                          <button type="submit" class="btn btn-primary">Deposit</button>
                        </form>
                      </div>
                      <!-- </div> -->
                      <div class="card mt-4">
                        <div class="card-body">
                          <h5 class="card-title">Wallet Deposit Address</h5>
                          <div class="row wallet-address">
                            <div class="col-md-8">
                              <p>Deposits to this address are unlimited. Note that you may not be able to withdraw all
                                of your
                                funds at once if you deposit more than your daily withdrawal limit.</p>
                              <div class="input-group">
                                <input type="text" class="form-control" value="138Qp8AuGMiaznizSiQxHEBWMdxbRs8TTv">
                                <div class="input-group-prepend">
                                  <button class="btn btn-primary">COPY</button>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-4">
                              <img src="https://crypo-laravel-live.netlify.app/assets/img/qr-code-light.svg" alt="qr-code">
                            </div>
                          </div>
                        </div>
                      </div>

                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>